package org.datastructure.com;
import java.io.Console;
import java.util.List;
import java.util.Vector;

import javax.swing.table.DefaultTableModel;

public class ListHouse extends javax.swing.JDialog {
     public ListHouse(java.awt.Frame parent, boolean modal,List<House> houses){
		  super(parent, modal);
		//houses = new House().readFile();
		initComponents();
		setLocationRelativeTo(null);
        
        SortedList sl = new SortedList();
        sl.setHouses(houses);
        houses = sl.getShortHouses();
        
        House hr = new House();
        hr.saveHouseList(houses);
        
        //houses = houses.sort();
        //System.clearProperty(Console);
        /*for(House h: houses )
        {
        	System.out.println(h.getLotNumber() + "\t" + h.getFirstName() + "\t" + h.getLastName() + "\t" + h.getNumberOfBedRooms() + "\t" + h.getPrice() + "\t" + h.getSquareFeet());
        }
        */
        
        DefaultTableModel df;
        df = (DefaultTableModel) jTable1.getModel();
        
        for(House h: houses){
            Vector v = new Vector();
            v.add(h.getLotNumber());// + "");
            v.add(h.getFirstName());
            v.add(h.getLastName());// + "");
            v.add(h.getPrice());//+ "");
            v.add(h.getSquareFeet());// + "");
            v.add(h.getNumberOfBedRooms());// + "");
            //System.out.println(v.firstElement());
            df.addRow(v);
        }
        
	}
	
	
}
